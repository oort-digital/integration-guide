{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ESNext",
    "moduleResolution": "Node",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true
  },
  "include": ["src/**/*"],
 
  "exclude": ["node_modules", "**/*.spec.ts"],
  "typeRoots": [
    "node_modules/@types"
  ],
}